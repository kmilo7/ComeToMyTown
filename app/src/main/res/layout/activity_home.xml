<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@raw/inicio_c"
    tools:context=".Home">

    <TextView
        android:id="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="ALEJANDRIA - ANTIOQUIA"
        app:layout_constraintVertical_bias="0.4"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/whitesmoke"
        android:fontFamily="monospace"/>

    <Button
        android:id="@+id/btt_hot"
        android:text="  HOTELES"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:background="@drawable/btt_ppal"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btt_res"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"/>

    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@raw/icon_hotel"
        app:layout_constraintEnd_toEndOf="@id/btt_hot"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="@id/btt_hot"
        app:layout_constraintTop_toTopOf="@id/btt_hot"
        app:layout_constraintBottom_toBottomOf="@id/btt_hot"/>

    <Button
        android:id="@+id/btt_res"
        android:text="  RESTAURANTES"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:background="@drawable/btt_ppal"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/btt_hot"
        app:layout_constraintEnd_toStartOf="@id/btt_sitios"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@raw/icon_res"
        app:layout_constraintBottom_toBottomOf="@id/btt_res"
        app:layout_constraintEnd_toEndOf="@id/btt_res"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="@id/btt_res"
        app:layout_constraintTop_toTopOf="@id/btt_res"/>

    <Button
        android:id="@+id/btt_sitios"
        android:text="  SITIOS"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:background="@drawable/btt_ppal"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/btt_res"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@raw/icon_sit"
        app:layout_constraintBottom_toBottomOf="@id/btt_sitios"
        app:layout_constraintEnd_toEndOf="@id/btt_sitios"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="@id/btt_sitios"
        app:layout_constraintTop_toTopOf="@id/btt_sitios"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/iconapp"
        app:layout_constraintVertical_bias="0"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@raw/icons"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-126dp" />

    <ImageView
        android:id="@+id/bgbird"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/bgbird"
        app:layout_constraintVertical_bias="0.25"/>

</androidx.constraintlayout.widget.ConstraintLayout>