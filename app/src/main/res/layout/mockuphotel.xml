<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/phototel"
        android:layout_margin="5dp"
        android:src="@drawable/hotelalejandria"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        />

    <TextView
        android:id="@+id/titlehotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phototel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:text="HOTEL VILLA DEL ALBA"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginHorizontal="15dp"
        />

    <TextView
        android:id="@+id/pricehotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titlehotel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:text="$ 50.000 COP"
        android:textColor="@color/red"
        android:textSize="25dp"
        android:fontFamily="monospace"
        android:layout_marginHorizontal="15dp"
        />

    <TextView
        android:id="@+id/deschotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pricehotel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:text="Habitación amoblada con 1 cama doble, televisión, ventilador, y baño."
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginHorizontal="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>